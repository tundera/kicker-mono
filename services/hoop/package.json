    "nba": "4.15.0",
    "nexus": "^1.0.0",
    "nexus-prisma": "0.24.0"
  },
  "devDependencies": {
    "@types/graphql-upload": "8.0.4",
    "@types/node": "^14.14.35",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.2.1",
    "prisma": "^2.18.0",
