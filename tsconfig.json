{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "importHelpers": true,
    "sourceMap": true,
    "noEmit": true,
    "rootDir": ".",
    "baseUrl": ".",
    "isolatedModules": true,
    "incremental": true
  },
  "include": [
    "types/**/*",
    "packages/cli/src/**/*",
    "packages/components/src/**/*",
    "packages/theme/src/**/*"
  ],
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "**/generated"]
}
