{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Seed database",
      "type": "pwa-node",
      "request": "launch",
      "args": ["--loader", "ts-node/esm", "./db/scripts/update.ts"],
      "cwd": "${workspaceFolder}/services/hoop",
      "internalConsoleOptions": "openOnSessionStart",
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "env": {
        "TS_NODE_PROJECT": "${workspaceFolder}/services/hoop/tsconfig.json"
      }
    },
    {
      "name": "Update database",
      "type": "pwa-node",
      "request": "launch",
      "args": ["--loader", "ts-node/esm", "./db/scripts/update.ts"],
      "cwd": "${workspaceFolder}/services/hoop",
      "internalConsoleOptions": "openOnSessionStart",
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "env": {
        "TS_NODE_PROJECT": "${workspaceFolder}/services/hoop/tsconfig.json"
      }
    },
    {
      "name": "Seed database",
      "type": "pwa-node",
      "request": "launch",
      "args": ["--loader", "ts-node/esm", "./db/scripts/seed.ts"],
      "cwd": "${workspaceFolder}/services/hoop",
      "internalConsoleOptions": "openOnSessionStart",
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "env": {
        "TS_NODE_PROJECT": "${workspaceFolder}/services/hoop/tsconfig.json"
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Launch Node (kicker)",
      "skipFiles": ["<node_internals>/**"],
      "port": 9229
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome (kicker)",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "webpack:///./*": "${workspaceRoot}/app/*"
      }
    }
  ],
  "compounds": [
    {
      "name": "Debug Fullstack (kicker)",
      "configurations": ["Launch Node (kicker)", "Launch Chrome (kicker)"]
    }
  ]
}
