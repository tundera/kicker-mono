{
  "name": "tunderadev",
  "description": "Main monorepo for JAMStack development",
  "author": {
    "name": "Philip Johnston",
    "email": "tunderadev@gmail.com",
    "url": "https://github.com/tundera"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tundera/kicker-mono.git"
  },
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*",
      "sites/*",
      "services/*",
      "examples/*",
      "studio",
      "docs",
      "scripts"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/prisma",
      "**/prisma/**",
      "**/@prisma",
      "**/@prisma/**"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap && yarn cli:link",
    "cli:link": "yarn workspace @tunderadev/cli link",
    "cli:unlink": "yarn workspace @tunderadev/cli unlink",
    "postinstall": "preconstruct dev && manypkg check",
    "test": "jest",
    "test:watch": "jest --watch",
    "build:packages": "yarn --cwd packages/components build",
    "build:kicker": "yarn --cwd apps/kicker build",
    "build:website": "yarn --cwd sites/website build",
    "build:all": "yarn nx run-many --target=build --all --parallel",
    "build": "preconstruct build && nx affected:build",
    "start:server": "yarn --cwd services/graphql dev",
    "version": "changeset version",
    "version:canary": "changeset version --snapshot canary",
    "release": "yarn build && yarn changeset publish",
    "release:canary": "yarn build && changeset publish --tag canary",
    "commit": "gacp"
  },
  "dependencies": {
    "@babel/core": "^7.13.10",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.13.0",
    "@changesets/changelog-github": "^0.3.0",
    "@changesets/cli": "^2.14.1",
    "@manypkg/cli": "0.17.0",
    "@nrwl/cli": "11.5.2",
    "@nrwl/cypress": "11.5.2",
    "@nrwl/next": "11.5.2",
    "@nrwl/nx-cloud": "latest",
    "@nrwl/react": "11.5.2",
    "@nrwl/storybook": "11.5.2",
    "@nrwl/tao": "11.5.2",
    "@nrwl/workspace": "11.5.2",
    "@preconstruct/cli": "2.0.6",
    "@types/node": "^14.14.35",
    "@types/react": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "4.18.0",
    "@typescript-eslint/parser": "4.18.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "cypress": "^6.8.0",
    "dotenv-cli": "^4.0.0",
    "eslint": "7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-mdx": "1.11.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "merge-anything": "^4.0.1",
    "patch-package": "6.4.7",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.2.1",
    "sync-dotenv": "2.6.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  },
  "gacp": {
    "add": true,
    "push": true,
    "emoji": "emoji",
    "editor": false,
    "hooks": {
      "precommit": "sync-dotenv --env .env.local && tsc && lint-staged && pretty-quick --staged",
      "prepush": "yarn lint && yarn test",
      "postrebase": "yarn install"
    }
  },
  "volta": {
    "node": "14.16.0",
    "yarn": "1.22.10"
  },
  "preconstruct": {
    "packages": [
      "packages/*",
      "services/*"
    ]
  }
}
